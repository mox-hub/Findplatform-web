<view class="doc-card">
    <navigator url="/pages/{{data.name}}/{{data.name}}" class="flex radius doc-card-navigator {{'bg-'+data.color+'-gradient'}}">
        <view class="flex-sub p-4 doc-text">
            <view class="doc-title">{{ data.title }}</view>
            <view class="text-lg text-Abc text-lighter doc-name">{{ data.name }}</view>
        </view>
        <view class="mt-2 mr-1 pt-4 pr-4 pl-2 doc-icon">
            <text class="icon-xl text-xl {{data.icon}}"/>
        </view>
        <view class="doc-dot doc-dot1 {{'bg-'+data.color+'-gradient'}}"/>
        <view class="doc-dot doc-dot2 {{'bg-'+data.color+'-gradient'}}"/>
        <view class="doc-dot doc-dot3 {{'bg-'+data.color+'-gradient'}}"/>
    </navigator>
    <view class="doc-bg {{'bg-'+data.color}}" wx:if="{{data.icon}}"/>
</view>
