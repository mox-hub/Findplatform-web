<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
	<view class="page__bd">
		<view class="weui-panel weui-panel_access">
			<view class="weui-panel__bd">
					<view aria-labelledby="js_p1m1_bd" class="weui-media-box weui-media-box_appmsg" >
						<view class="weui-media-box__hd">
							<image class="weui-media-box__thumb" src="/icons/index01.png" alt></image>
						</view>
						<view aria-hidden="true" id="js_p1m1_bd" class="weui-media-box__bd">
							<text class="weui-media-box__title">手机</text>
						
					</view>
					</view>
			</view>
			</view>
			<view class="weui-panel__ft">
				
			</view>
		</view>
	</view>
	<view class="page__bd">
	
	<view class="weui-form-preview">
		<view class="weui-form-preview__hd" aria-role="option">
			<label class="weui-form-preview__label">发布者</label>
			<em class="weui-form-preview__value">小明</em>
			<label class="weui-form-preview__label">联系方式</label>
			<em class="weui-form-preview__value">123456789</em>
		</view>
		<view aria-labelledby="p4 js_a11y_comma p5 js_a11y_comma p6" class="weui-form-preview__bd" aria-role="option">
			<view id="p1" class="weui-form-preview__item">
				<label class="weui-form-preview__label">颜色：</label>
				<text class="weui-form-preview__value">蓝色</text>
			</view>
			<view id="p2" class="weui-form-preview__item">
				<label class="weui-form-preview__label">物品类别：</label>
				<text class="weui-form-preview__value">电子产品</text>
			</view>
			<view id="p3" class="weui-form-preview__item">
				<label class="weui-form-preview__label">拾取时间：</label>
				<text class="weui-form-preview__value">2022.1.3 11：22</text>
			</view>
			<view id="p4" class="weui-form-preview__item">
				<label class="weui-form-preview__label">拾取地点：</label>
				<text class="weui-form-preview__value">食堂</text>
			</view>
			<view id="p5" class="weui-form-preview__item">
				<label class="weui-form-preview__label">物品状态：</label>
				<text class="weui-form-preview__value">未找回</text>
			</view>
			<view id="p6" class="weui-form-preview__item">
				<label class="weui-form-preview__label">描述：</label>
				<text class="weui-form-preview__value">很长很长的名字很长很长的名字很长很长的名字很长很长的名字很长很长的名字</text>
			</view>
		</view>
		<view class="weui-form-preview__ft">
			<!-- <navigator class="weui-form-preview__btn weui-form-preview__btn_default" aria-role="button" url="javascript:">辅助操作</navigator> -->
			<navigator class="weui-form-preview__btn weui-form-preview__btn_primary" aria-role="button" url="/pages/item/item_change">
			<view class="modify">修改信息</view>
			</navigator>
		</view>
	</view>
</view>
