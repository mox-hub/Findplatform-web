<!--pages/location/location.wxml-->
<ui-sys title="详细地址">
  <!-- 地图位置展示卡片 -->
  <ui-card ui="shadow m-4 radius">
    <map style="height: 800rpx;" 
        latitude="{{latitude}}" 
        longitude="{{longitude}}" 
        markers="{{markers}}"
        layer-style="{{style}}">
    </map>
  </ui-card>

  <!-- 物品数据面板 -->
  <ui-menu ui="border radius m-4 shadow">

    <!-- 拾取地址 -->
    <ui-menu-item title="拾取地址" icon="cuIcon-peoplefill text-blue" isAction>
      <view slot="action">
        <text class="text-grey text-sm">{{pickLocation?pickLocation:"暂无"}}</text>
      </view>
    </ui-menu-item>

    <!-- 地点名称 -->
    <ui-menu-item title="地点名称" icon="cuIcon-peoplefill text-blue" isAction>
      <view slot="action">
        <text class="text-grey text-sm">{{placement?placement:"暂无"}}</text>
      </view>
    </ui-menu-item>
  </ui-menu>

  <!-- 按钮操作域 -->
  <view class="ui-container p-4">
    <button class="ui-btn block bg-green shadow shadow-green mb-4" type="primary" bindtap="btnShowMap">选择位置</button>
    <button class="ui-btn block bg-blue shadow shadow-blue mt-3" bindtap="btnSaveLocation">保存</button>
  </view>
</ui-sys>