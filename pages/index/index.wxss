view {
    /* 使用主题颜色 */
    color: var(--themeColor);
  }
  
  page {
    background-color: #f5f6f8;
  }
  
  .action {
    width: 150rpx;
  }
  
  .cu-item {
    height: 43vh;
    border-radius: 25rpx;
  }
  
  .cardTitle {
    color: #fff;
    padding: 90rpx 60rpx;
    padding-bottom: 20rpx;
    font-size: 65rpx;
    font-weight: 350;
    transform: skew(-10deg, 0deg);
    position: relative;
    text-shadow: 0px 0px 6rpx rgba(0, 0, 0, 0.3)
  }
  
  .cardImg {
    height: 300rpx;
    width: 300rpx;
    opacity: 0.5;
    margin-left: 50%;
  }
  
  .bg-green-gradient {
    background: linear-gradient(to right, #8FCFD6, #c2e1e3);
  }
  
  .bg-red-gradient {
    background: linear-gradient(to right, #e899aa, #ebbfc8);
  }
  