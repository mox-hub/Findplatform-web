<!-- 双列滚动浏览 -->
<scroll-view class= "item" scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
  <view class="goods" style="width:100%">
    <view class="item-list">
      <view wx:for="{{col1}}" wx:key="id">
        <navigator class="item-card" url='/pages/item/item_details?url={{item.item_id}}'>
        <view class="item-img-outline">
          <image class="item-img" src="{{item.imageurl}}" style="width:100%;height:{{item.height}}px"></image>
        </view>
        <view class="item-info-box">
            <view class="item-name">
              {{item.name}}
            </view>
            <p class="{{item.state ? 'item-status-on' : 'item-status'}}">{{item.state? '已找回' : '未找回'}}</p>      
          </view>
          <view class="item-info-box">
            <p class="item-info-time">{{item.pick_time}}</p>  
            <p class="item-info-location">{{item.pick_location}}</p>  
          </view>
        </navigator>
      </view>
    </view>
    <view class="item-list">
      <view wx:for="{{col2}}" wx:key="id">
        <navigator class="item-card" url='/pages/item/item_details?url={{item.item_id}}'>
          <view class="item-img-outline">
            <image class="item-img" src="{{item.imageurl}}" style="width:100%;height:{{item.height}}px"></image>
          </view>
          <view class="item-info-box">
            <view class="item-name">
              {{item.name}}
            </view>
            <p class="{{item.state ? 'item-status-on' : 'item-status'}}">{{item.state? '已找回' : '未找回'}}</p>      
          </view>
          <view class="item-info-box">
            <p class="item-info-time">{{item.pick_time}}</p>  
            <p class="item-info-location">{{item.pick_location}}</p>  
          </view>
        </navigator>
      </view>
    </view>
  </view>
</scroll-view>
<view style="display:none">
  <image wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.imageurl}}" bindload="onImageLoad"></image>
</view> 
