/* pages/user/user.wxss */

page{
  background-color: #f5f6f8;
}

.cu-item-show {
  height: 0rpx;
}

.UCenter-bg {
  background-image: url(https://img.moxhub.cn/tmp/IswYuQi6v6ib9de727fb2375ef2a3df96cc1e1046d43.png);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: black;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}