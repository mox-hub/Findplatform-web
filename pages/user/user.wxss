/* pages/user/user.wxss */
page{
  background-color: #f5f6f8;
}

.ui-menu-show {
  height: 0rpx;
  opacity: 0;

}

.UCenter-bg {
  /* 此图片为个人卡片背景图，请更换为自己的图片或者本地图片 */
  margin-top: 200rpx;
  background-image: url(https://img.moxhub.cn/tmp/IswYuQi6v6ib9de727fb2375ef2a3df96cc1e1046d43.png);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: black;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.kefubtn {
  position: absolute;
  top: 0;
  left: 0;
  min-height: 4em;
  width: 100%;
  opacity: 0;
}

.center {
  display: flex;
  text-align: center;
}