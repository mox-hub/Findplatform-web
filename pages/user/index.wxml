<!--pages/user/index.wxml-->
<!-- <text>pages/user/index.wxml</text> -->
<view class="container">
  <!-- 头像部分 -->
  <view class="info-box">
    <view style="text-align: center; margin-bottom:2%;">
      <!-- <image class="avatar-img" src="{{avatarUrl}}" /> -->
      <image class="avatar-img" src="/icons/me-o.png" />
    </view>
  </view>
  <!-- 个人信息栏 -->
  <mp-cells ext-class="my-cells" title="个人信息">
    <mp-cell value="昵称：" footer="{{username}}"></mp-cell>
    <mp-cell value="手机号：" footer="{{phone}}"></mp-cell>
    <mp-cell value="qq号：" footer="{{QQ}}"></mp-cell>
  </mp-cells>
  <!-- 功能栏 -->
  <mp-cells ext-class="my-cells" title="功能">
    <a class="weui-cell weui-cell_access" href="../register/index.wxml">
          <div class="weui-cell__bd">
              <p>我的发布</p>
          </div>
          <div class="weui-cell__ft">由此进入</div>
      </a>
      <a class="weui-cell weui-cell_access" href="../search/index">
          <div class="weui-cell__bd">
              <p>我的收藏</p>
          </div>
          <div class="weui-cell__ft">由此进入</div>
      </a>
  </mp-cells>
  <!-- 获取个人信息 -->
  <view style="margin-top:20%"> 
    <button open-type="getUserInfo" bindtap="showUserInfoTap">获取个人信息</button>
  </view>

  <!-- 底栏 -->
  <view class="weui-footer">
      <view class="weui-footer__links">
        <navigator class="weui-footer__link weui-wa-hotarea" url="javascript:">底部链接</navigator>
      </view>
      <view class="weui-footer__text">Copyright &copy; 2008-2016 weui.io</view>
  </view>

</view>

